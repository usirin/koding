.MediaObject
  &, .MediaObject-content
    overflow                hidden
    _overflow               visible
    zoom                    1

  .MediaObject-media
    float                   left
    position                relative
    margin-right            1em

    img
      display               block

    a
      left                  0
      top                   0
      display               block
      width                 100%
      height                100%
      background-size       cover

  &.MediaObject--right
    .MediaObject-media
      float                 right
      margin-right          inherit
      margin-left           1em
