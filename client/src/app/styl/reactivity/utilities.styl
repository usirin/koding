@css {
/*
Utility functions, mixins and classes
-------------------------------------
utils.styl
*/
}

/* z-index scale */
for i in (-1..10)
  .u-zIndex{i}
    z-index                 i * 10

.u-floatLeft
  float                     left

.u-floatRight
  float                     left

.u-floatNone
  float                     none

.u-clearfix
  &:before
  &:after
    content                 " "
    display                 table

  &:after
    clear                   both

.u-textLeft
  text-align                left

.u-textRight
  text-align                right

.u-textCenter
  text-align                center